---
import { Debug } from "astro/components";
import Layout from "../layouts/Layout.astro";
import Personkort from "../components/Personkort.astro";

const url = "https://pbhqptcgtunejfwsunzi.supabase.co/rest/v1/medlemmer";

const options = {
  headers: {
    apikey:
      "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InBiaHFwdGNndHVuZWpmd3N1bnppIiwicm9sZSI6ImFub24iLCJpYXQiOjE2Nzg1MjU3NjEsImV4cCI6MTk5NDEwMTc2MX0.qPLnnbV_2nDBjczEpGDt10lr3DQgCZ54roKiy0OZXL4",
  },
};

const response = await fetch(url, options);
const data = await response.json();
const aktive = data.filter((person) => person.aktiv);
const inaktive = data.filter((person) => !person.aktiv);
---

<Layout title="Medlmsliste">
  <main>
    <h2>Aktive</h2>
    <section id="aktive">
      {
        aktive.map((person) => (
          <Personkort
            link={"/personer/" + person.id}
            profilbillede={`/thumbs/${person.billede}`}
            navn={person.navn}
            email={person.email}
            dato={person.created_at.slice(0, 10)}
          />
        ))
      }
    </section>
    <h2>Inaktive</h2>
    <section id="inaktive">
      {
        inaktive.map((person) => (
          <Personkort
            link={"/personer/" + person.id}
            profilbillede={`/thumbs/${person.billede}`}
            navn={person.navn}
            email={person.email}
            dato={person.created_at.slice(0, 10)}
          />
        ))
      }
    </section>
  </main>
</Layout>

<style>
  section {
    display: grid;
    gap: 1em;
    padding: 1em;
  }
  @media screen and (min-width: 600px) {
    section {
      grid-template-columns: repeat(auto-fit, 350px);
      /* justify-content: center; */
    }
  }
</style>
