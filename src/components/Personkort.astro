---
const { profilbillede, navn, email, link, erAktiv, dato } = Astro.props;
---

<a href={link}>
  <article class={erAktiv === false && "inaktiv"}>
    <img src={profilbillede} alt="profilbillede" />
    <div>
      <h2>{navn}</h2>
      <p>{email}</p>
      <p>{dato}</p>
    </div>
  </article>
</a>

<style>
  a {
    text-decoration: none;
    color: inherit;
  }
  article {
    border-radius: 1em;
    overflow: hidden;
    border: solid 1px rgb(0, 79, 128);
    color: rgb(0, 79, 128);
    height: 410px;
    display: flex;
    flex-direction: column;
    align-items: baseline;
    justify-content: space-between;
  }

  div {
    padding-left: 1em;
  }
  .inaktiv {
    position: relative;
    opacity: 0.8;
    filter: grayscale();
  }
  .inaktiv::before {
    content: "Ikke aktiv";
    padding: 2em;
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: var(--inaktiv);
  }
</style>
