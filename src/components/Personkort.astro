---
const { person } = Astro.props;
---

<a href={person.id}>
  <article class={!person.aktiv && "inaktiv"}>
    <img src=`thumbs/${person.billede}` alt="profilbillede" />
    <div>
      <h2>{person.navn}</h2>
      <p>{person.email}</p>
      <p><span>Indmeldt</span> {person.created_at.slice(0, 10)}</p>
    </div>
  </article>
</a>

<style>
  .inaktiv {
    position: relative;
    opacity: 0.8;
    filter: grayscale();
  }
  .inaktiv::before {
    content: "Ikke aktiv";
    padding: 2em;
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    color: black;
    background-color: var(--inaktiv);
  }
  a {
    text-decoration: none;
    color: inherit;
  }
  article {
    position: relative;
    border-radius: 1em;
    overflow: hidden;
    height: 370px;
  }

  article:hover {
    box-shadow: 5px 5px 10px rgba(0, 46, 56, 0.251);
  }
  div {
    padding-left: 1em;
    position: absolute;
    bottom: 0;
    color: white;
    background-color: var(--brandbg);
    width: 100%;
  }
</style>
