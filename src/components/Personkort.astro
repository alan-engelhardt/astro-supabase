---
const { profilbillede, navn, email, link, aktiv, dato } = Astro.props;
---

<a href={link}>
  <article class={!aktiv && "inaktiv"}>
    <img src={profilbillede} alt="profilbillede" />
    <div>
      <h2>{navn}</h2>
      <p>{email}</p>
      <p>{dato}</p>
    </div>
  </article>
</a>

<style>
  a {
    text-decoration: none;
    color: inherit;
  }
  article {
    border-radius: 1em;
    overflow: hidden;
    border: solid 1px rgb(0, 79, 128);
    color: rgb(0, 79, 128);
  }

  div {
    padding-left: 1em;
  }
  .aktiv {
    background-color: var(--aktiv);
  }
  .inaktiv {
    position: relative;
    opacity: 0.5;
    color: black;
  }
  .inaktiv::before {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    content: "";
    background-color: #00000030;
  }
</style>
